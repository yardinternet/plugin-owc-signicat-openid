{
	"name": "plugin/owc-signicat-openid",
	"description": "Log into the Signicat Broker with OpenID",
	"type": "wordpress-plugin",
	"config": {
		"preferred-install": "dist",
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"authors": [
		{
			"name": "Yard | Digital Agency",
			"email": "owc@yard.nl",
			"homepage": "https://www.yard.nl"
		}
	],
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"post-package-install": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
	},
	"autoload": {
		"psr-4": {
			"OWCSignicatOpenID\\": "src/"
		},
		"files": [
			"src/functions.php"
		]
	},
	"require": {
		"aura/session": "^2.1",
		"cedaro/wp-plugin": "^0.4.0",
		"cmdisp/monolog-microsoft-teams": "1.3.0",
		"facile-it/php-openid-client": "^0.3.4",
		"guzzlehttp/psr7": "^1.7",
		"http-interop/http-factory-guzzle": "^1.2",
		"monolog/monolog": "^2.0",
		"pimple/pimple": "^3.4",
		"psr/container": "^1.1",
		"symfony/http-client": "^5.4",
		"vlucas/phpdotenv": "^5.5"
	},
	"require-dev": {
		"symfony/var-dumper": "^5.4",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0"
	}
}
