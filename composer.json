{
	"name": "plugin/owc-signicat-openid",
	"description": "Log into the Signicat Broker with OpenID",
	"type": "wordpress-plugin",
	"config": {
		"preferred-install": "dist",
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"php-http/discovery": true
		}
	},
	"authors": [
		{
			"name": "Yard | Digital Agency",
			"email": "owc@yard.nl",
			"homepage": "https://www.yard.nl"
		}
	],
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"post-package-install": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
	},
	"autoload": {
		"psr-4": {
			"OWCSignicatOpenID\\": "src/"
		}
	},
	"require": {
		"cmdisp/monolog-microsoft-teams": "1.3.0",
		"doctrine/annotations": "^1.13",
		"facile-it/php-openid-client": "^0.3.4",
		"guzzlehttp/guzzle": "^7.8",
		"guzzlehttp/psr7": "^1.7",
		"http-interop/http-factory-guzzle": "^1.2",
		"monolog/monolog": "^2.0",
		"odan/session": "^5.1",
		"php-di/php-di": "^6.4",
		"psr/container": "^1.1",
		"symfony/http-client": "^5.4",
		"vlucas/phpdotenv": "^5.5"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"symfony/var-dumper": "^5.4",
		"wp-coding-standards/wpcs": "^3.0"
	}
}
